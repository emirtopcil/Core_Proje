@model Core_Proje.Areas.Writer.Models.UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Skydash Admin</title>
    <link rel="stylesheet" href="~/skydash/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/skydash/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/skydash/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/skydash/css/vertical-layout-light/style.css">
    <link rel="shortcut icon" href="~/skydash/images/favicon.png" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/skydash/images/logo.svg" alt="logo">
                            </div>
                            <h4>Buralarda yeni misin?</h4>
                            <h6 class="font-weight-light">Sadece bir kaç adımda kolayca üye ol.</h6>
                            <form class="pt-3">
                                <div class="form-group">
                                    <label>Ad</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <input type="text" asp-for="Name" class="form-control" placeholder="İsim" />
                                </div>
                                <div class="form-group">
                                    <label>Soyad</label>
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                    <input type="text" asp-for="Surname" class="form-control" placeholder="Soyisim" />
                                </div>
                                <div class="form-group">
                                    <label>Kullanıcı Adı</label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                    <input type="text" asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" />
                                </div>
                                <div class="form-group">
                                    <label>Şifre</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <input type="password" asp-for="Password" class="form-control" placeholder="Şifre" />
                                </div>
                                <div class="form-group">
                                    <label>Şifre Tekrarı</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Şifre" />
                                </div>
                                <div class="form-group">
                                    <label>Mail</label>
                                    <span asp-validation-for="Mail" class="text-danger"></span>
                                    <input type="email" asp-for="Mail" class="form-control" placeholder="mail@example.com" />
                                </div>
                                <div class="form-group">
                                    <label>Resim</label>
                                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                                    <input type="text" asp-for="ImageURL" class="form-control" placeholder="*.jpeg/jpg/png" />
                                </div>
                                <div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input">
                                            Tüm şartları okudum ve kabul ediyorum.
                                        </label>
                                    </div>
                                </div>
                                
                                <button class="btn btn-primary" formmethod="post" asp-action="Index" >Kayıt ol</button>
                                
                                @*<div class="mt-3">
                                    <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" href="#">Kayıt Ol</a>
                                </div>*@
                                <div class="text-center mt-4 font-weight-light">
                                    Zaten bir hesabın var mı? <a href="login.html" class="text-primary">Giriş Yap</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/skydash/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/skydash/js/off-canvas.js"></script>
    <script src="~/skydash/js/hoverable-collapse.js"></script>
    <script src="~/skydash/js/template.js"></script>
    <script src="~/skydash/js/settings.js"></script>
    <script src="~/skydash/js/todolist.js"></script>
</body>
</html>