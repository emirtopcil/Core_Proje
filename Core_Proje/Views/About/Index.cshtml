@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("Index", "About", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.AboutID)
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center">Hizmet Düzenleme Sayfası</h4>
                <div class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Başlık</label>
                        @Html.TextBoxFor(x=>x.Title , new { @class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Açıklama</label>
                        @Html.TextBoxFor(x=>x.Description , new { @class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Yaş</label>
                        @Html.TextBoxFor(x=>x.Age , new { @class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">E-Mail</label>
                        @Html.TextBoxFor(x=>x.Mail , new { @class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Telefon</label>
                        @Html.TextBoxFor(x=>x.Phone , new { @class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Adres</label>
                        @Html.TextBoxFor(x=>x.Address , new { @class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Fotoğraf</label>
                        @Html.TextBoxFor(x=>x.ImageUrl , new { @class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Gönder</button>
                    <a href="/About/Index" class="btn btn-dark">İptal</a>

                </div>
            </div>
        </div>
    </div>
}



