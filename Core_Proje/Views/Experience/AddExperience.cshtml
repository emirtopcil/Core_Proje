@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center">Deneyim Ekleme Sayfası</h4>
                <div class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Şirket Adı</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Şirket Adı" name="Name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Tarih Aralığı</label>
                        <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Tarih" name="Date">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Fotoğraf Yolu</label>
                        <input type="text" class="form-control" id="exampleInputPassword4" placeholder="Fotoğraf" name="ImageURL">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Açıklama</label>
                        <input type="text" class="form-control" id="exampleInputPassword4" placeholder="Açıklama" name="Description">
                    </div>


                    <button type="submit" class="btn btn-primary mr-2">Gönder</button>
                    <a href="/Experience/Index" class="btn btn-dark">İptal</a>

                </div>
            </div>
        </div>
    </div>
}
