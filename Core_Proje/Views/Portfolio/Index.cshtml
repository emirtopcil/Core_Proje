@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mt-5">
    <div class="col">
        <div class="card bg-default shadow">
            <div class="card-header bg-transparent border-0">
                <h3 class="text-white mb-0 text-center">Projeler</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-dark table-flush">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Platform</th>
                            <th scope="col">Ücret</th>
                            <th scope="col">Durum</th>
                            <th scope="col">Görseller</th>
                            <th scope="col">Tamamlanma Durumu</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var x in Model)
                        {
                        <tr>
                            <th scope="row">
                                <div class="media align-items-center">
                                    <a href="#" class="avatar rounded-circle mr-3">
                                        <img alt="Image placeholder" src="@x.Image1">
                                    </a>
                                    <div class="media-body">
                                        <span class="mb-0 text-sm">@x.Name</span>
                                    </div>
                                </div>
                            </th>
                            <td>
                                @x.Price
                            </td>
                            <td>
                                <span class="badge badge-dot mr-4">
                                        <i class="bg-warning"></i> Devam Ediyor
                                    </span>
                            </td>
                            <td>
                                <div class="avatar-group">
                                    <a href="#" class="avatar avatar-sm" data-toggle="tooltip" data-original-title="Ryan Tompson">
                                        <img alt="Image placeholder" src="~/argon-dashboard-master/assets/img/theme/team-1-800x800.jpg" class="rounded-circle">
                                    </a>
                                    <a href="#" class="avatar avatar-sm" data-toggle="tooltip" data-original-title="Romina Hadid">
                                        <img alt="Image placeholder" src="~/argon-dashboard-master/assets/img/theme/team-2-800x800.jpg" class="rounded-circle">
                                    </a>
                                    <a href="#" class="avatar avatar-sm" data-toggle="tooltip" data-original-title="Alexander Smith">
                                        <img alt="Image placeholder" src="~/argon-dashboard-master/assets/img/theme/team-3-800x800.jpg" class="rounded-circle">
                                    </a>
                                    <a href="#" class="avatar avatar-sm" data-toggle="tooltip" data-original-title="Jessica Doe">
                                        <img alt="Image placeholder" src="~/argon-dashboard-master/assets/img/theme/team-4-800x800.jpg" class="rounded-circle">
                                    </a>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <span class="mr-2">@x.Value%</span>
                                    <div>
                                        <div class="progress">
                                            <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@x.Value" aria-valuemin="0" aria-valuemax="100" style="width: @x.Value%;"></div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td><a href="/Portfolio/DeletePortfolio/@x.PortfolioID" class="btn btn-outline-danger">Sil</a></td>
                            <td>
                                <a href="/Portfolio/EditPortfolio/@x.PortfolioID" class="btn btn-outline-warning">Güncelle</a>
                            </td>
                         
                        </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Portfolio/AddPortfolio" class="btn btn-primary">Yeni Proje Ekle</a>
            </div>
        </div>
    </div>
</div>

